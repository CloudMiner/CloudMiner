{{extend 'layout.html'}}
{{from datetime import *}}
<body>
{{now = datetime.strptime(datetime.now().strftime('%Y/%m/%d %H:%M:%S'), '%Y/%m/%d %H:%M:%S')}}
<head>
    <link href="{{=URL('static', 'css/table_override.css')}}" rel="stylesheet" type="text/css" />
</head>
<h1>Machine Dash</h1>
    <div class="web2py_grid ">
        <div class="web2py_table">
			<div class="web2py_htmltable" style="width:100%;overflow-x:auto;-ms-overflow-x:scroll">
				<table>
					<thead>
                        <tr>
                            <th style="background-color:white;"></th>
                            <th style="background-color:white;"></th>
                            <th style="background-color:white;"></th>
                            <th style="background-color:white;"></th>
                            <th style="background-color:white;"></th>
                            <th colspan="3" style="text-align:center;">
                                <a href=/CloudMiner/default/workers_on/ target="_blank" >Worker</a>
                            </th>
                        </tr>
						<tr>
							<th><a>Machine name</a></th>
							<th><a>Platform</a></th>
							<th><a>Alive</a></th>
							<th><a>IP</a></th>
							<th><a>Port</a></th>
							<th><a>Miner</a></th>
							<th><a>Start time</a></th>
							<th><a>Stop time</a></th>
						</tr>
					</thead>
				{{i=1}}
                {{prev_mach_name=None}}
				{{prev_mach_port=None}}
				{{prev_time_start=None}}
                {{actual_time_start=None}}
                {{prev_started=None}}
                    <tbody>
				{{for row in rows:}}
                    {{if row.machine.name!=prev_mach_name:}}
                        {{if (i%2)==1:}}
                            <tr class="w2p_even even with_id">
                        {{else:}}
                            <tr class="w2p_odd odd with_id">
                            {{pass}}
                        <td>{{=row.machine.name}}</td>
                        <td>{{=row.platform.os}} - {{=row.platform.type}} - {{=row.platform.arch}}</td>
                        {{if row.machine.alive==None:}}
                            <td>{{=IMG(_src=URL('static','images/question_mark_50.png'),_style="height:15px;width:15px",_alt="?")}}</td>
                            <td>-<td/>
                            <td>-<td/>
                        {{elif row.machine.alive==False:}}
                            <td>{{=IMG(_src=URL('static','images/img_Cross_50.png'),_style="height:15px;width:15px",_alt="No")}}</td>
                            <td>-</td>
                            <td>-</td>
                        {{else:}}
                            <td>{{=IMG(_src=URL('static','images/tick_50.png'),_style="height:15px;width:15px",_alt="Yes")}}</td>
                            <td>{{=row.machine.ip}}</td>
                            <td>{{=row.machine.port}}</td>
                            {{pass}}
                        {{if row.machine.alive==None or row.machine.alive==False:}}
                                <td>-</td><td>-</td><td>-</td>
                        {{elif row.miner.name==None or (row.worker.time_stop!=None and row.worker.time_stop < now):}}
                                <td>{{=A(IMG(_src=URL('static','images/add_50.png'),_style="height:25px;width:25px",_alt="Yes"), _href=URL('start_worker', args=row.machine.id))}}</td>
                                <td>-</td><td>-</td>
                        {{else:}}
                            <td>
                                <a href="{{=URL('workers_on',args=row.worker.id)}}">
                                    {{=row.miner.name}} - v{{=row.miner.version}}
                                </a>
                                {{=A(IMG(_src=URL('static','images/stop_50.png'),_style="height:25px;width:25px",_alt="start!"), _href=URL('send_command', args=['stop',row.machine.id,row.worker.id]))}}
                            </td>
                            <td>{{=row.worker.time_start}}</td>
                            <td>{{=row.worker.time_stop}}</td>
                            {{pass}}

                    {{pass}}
                    <!--td>{{=prev_time_start}}</td>
                    <td>{{=actual_time_start}}</td-->
                    </tr>
                    {{prev_mach_name=row.machine.name}}
                    {{prev_mach_port=row.machine.port}}
                    {{prev_time_start=actual_time_start}}
                    {{prev_started=row.machine.alive}}
                    {{i+=1}}
				    {{pass}}
				</tbody>
				</table>
			</div>
		</div>
	</div>
</body>
